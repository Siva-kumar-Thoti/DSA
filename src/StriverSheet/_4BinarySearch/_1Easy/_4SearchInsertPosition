class Solution {
public:
    int searchInsert(vector<int>& a, int x) {
        int n=a.size();
        int l=0,r=n-1;

        if(x<=a[0]) return 0;
        if(x>a[n-1]) return n;
        if(x==a[n-1]) return n-1;

        while(l<=r){
            int mid=l+(r-l)/2;
            if(a[mid]==x) return mid;
            else if(a[mid]<x) l=mid+1;
            else r=mid-1;
        }

        return l;

    }
};