class Solution {
  public:
    int lowerBound(vector<int>& a, int x) {
        int l=0,r=a.size()-1,ans=a.size();

        while(l<=r){
            int mid=l+(r-l)/2;
            if(a[mid]>=x) {
                r=mid-1;
                ans=mid;
            }
            else l=mid+1;
        }

        return ans;


    }
};
