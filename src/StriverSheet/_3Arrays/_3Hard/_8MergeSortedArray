class Solution {
public:
    void merge(vector<int>& a, int m, vector<int>& b, int n) {
        if(m==0) a=b;
        if(n==0) return;

        int i=0,j=0,k=0;
        vector<int> c(m+n);

        while(i<m && j<n){
            if(a[i]<=b[j]){
                c[k++]=a[i++];
            } else{
                c[k++]=b[j++];
            }
        }

        while(i<m) c[k++]=a[i++];
        while(j<n) c[k++]=b[j++];
        a=c;
    }
};


