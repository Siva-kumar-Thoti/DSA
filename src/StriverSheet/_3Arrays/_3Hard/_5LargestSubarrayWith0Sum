class Solution {
  public:
  int maxLength(vector<int>& a) {
    int n=a.size(),maxi=0,k=0,sum=0;
    unordered_map<int,int> mp;
    mp[0]=-1;

    for(int i=0;i<n;i++){
      sum+=a[i];
      if(sum==k)
        maxi=max(maxi,i+1);

      if(mp.find(sum-k)!=mp.end())
        maxi=max(maxi,i-mp[sum-k]);


      if(mp.find(sum)==mp.end())
        mp[sum]=i;
    }

    return maxi;

  }
};
